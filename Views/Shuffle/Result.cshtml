@{
    ViewBag.Title = "Result";
}

<style>
    /* Remove previous progress bar styles */
    .progress {
        display: none;
    }

    /* Add custom styles for result display */
    .text-success {
        color: green;
        font-size: 18px;
        font-weight: bold;
    }

    .text-danger {
        color: red;
        font-size: 18px;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        font-size: 16px;
        font-weight: bold;
        padding: 10px;
        text-decoration: none;
    }
</style>

<h2>Result</h2>

@{
    int correctAnswers = ViewBag.CorrectAnswers;
    int totalQuestions = ViewBag.TotalQuestions;
    double score = ViewBag.Score;

    string resultColor = correctAnswers > 0 ? "text-success" : "text-danger";
}

<p class="@resultColor">You answered @correctAnswers out of @totalQuestions questions correctly.</p>

<p>Your final score is: @score%</p>

<hr>

@Html.ActionLink("Back to Identifying Areas", "Index", "Shuffle", null, new { @class = "btn btn-primary" })
